@model MagneticPulseAfrica.Models.Consultation

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Consultation - Magnetic Pulse Africa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f7f9;
            font-family: 'Arial', sans-serif;
            padding: 20px;
        }
        /* Navigation Styles */
        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            background-color: rgba(255,255,255,0.95);
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            padding: 10px 0;
            transition: all 0.3s ease;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            font-weight: 700;
            color: #007bff;
            font-size: 1.4rem;
            transition: transform 0.3s ease;
        }

            .navbar-brand:hover {
                transform: scale(1.05);
            }

            .navbar-brand img {
                margin-right: 15px;
                height: 40px;
                width: 40px;
                border-radius: 50%;
                object-fit: cover;
            }

        .nav-link {
            color: #333;
            font-weight: 500;
            position: relative;
            margin: 0 10px;
            transition: all 0.3s ease;
        }

            .nav-link::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                bottom: -5px;
                left: 50%;
                background-color: #007bff;
                transition: all 0.3s ease;
            }

            .nav-link:hover::after, .nav-link.active::after {
                width: 100%;
                left: 0;
            }

            .nav-link:hover, .nav-link.active {
                color: #007bff !important;
            }

        .navbar-toggler {
            border: none;
            outline: none;
            box-shadow: none;
        }

            .navbar-toggler:focus {
                box-shadow: none;
            }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            border-radius: 15px 15px 0 0;
            padding: 20px;
        }

            .card-header h2 {
                margin: 0;
            }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 25px;
            padding: 10px 20px;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .form-group label {
            font-weight: bold;
        }

        .form-control {
            border-radius: 8px;
        }

        .text-danger {
            font-size: 0.9em;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card">
                    <div class="card-header text-center">
                        <h2>Book Your Consultation</h2>
                        <p class="text-light">Fill out the form below to schedule a consultation with Magnetic Pulse Africa</p>
                    </div>

                    <div class="card-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["SuccessMessage"]
                            </div>
                        }

                        <form asp-controller="BookConsultation" asp-action="BookAppointment" method="post">
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="form-group mb-3">
                                <label asp-for="ContactNumber"></label>
                                <input asp-for="ContactNumber" class="form-control" />
                                <span asp-validation-for="ContactNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="EmailAddress"></label>
                                <input asp-for="EmailAddress" class="form-control" type="email" />
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="PhysicalAddress"></label>
                                <input asp-for="PhysicalAddress" class="form-control" />
                                <span asp-validation-for="PhysicalAddress" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="ConsultationReason"></label>
                                <textarea asp-for="ConsultationReason" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="ConsultationReason" class="text-danger"></span>
                            </div>

                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary w-100">Schedule Consultation</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
