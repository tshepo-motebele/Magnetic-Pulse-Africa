    /* PEMF Explanation Bubble */
    .pemf-explanation-trigger {
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        display: inline-block;
        padding-right: 30px;
    }

        .pemf-explanation-trigger::after {
            content: '▼';
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            font-size: 0.8em;
            transition: transform 0.3s ease;
        }

        .pemf-explanation-trigger:hover {
            color: #007bff;
        }

        .pemf-explanation-trigger.active::after {
            transform: translateY(-50%) rotate(180deg);
        }

    .pemf-explanation-bubble {
        background-color: #f4f9ff;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0,123,255,0.1);
        padding: 30px;
        margin-top: 30px;
        position: relative;
        overflow: hidden;
        max-height: 0;
        opacity: 0;
        transition: all 0.5s ease-in-out;
    }

        .pemf-explanation-bubble.active {
            max-height: 1000px;
            opacity: 1;
            padding: 30px;
        }

        .pemf-explanation-bubble::before {
            content: '';
            position: absolute;
            top: -20px;
            left: 50px;
            width: 0;
            height: 0;
            border-left: 20px solid transparent;
            border-right: 20px solid transparent;
            border-bottom: 20px solid #f4f9ff;
            transform: rotate(0deg);
        }

    .pemf-explanation-content {
        color: #495057;
        line-height: 1.6;
    }

        .pemf-explanation-content h3 {
            color: #007bff;
            margin-bottom: 15px;
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
        }

        .pemf-explanation-content ul {
            list-style-type: none;
            padding-left: 0;
        }

        .pemf-explanation-content li {
            position: relative;
            padding-left: 25px;
            margin-bottom: 10px;
        }

            .pemf-explanation-content li::before {
                content: '✓';
                position: absolute;
                left: 0;
                color: #007bff;
            }
.feature-card {
    position: relative;
    cursor: pointer;
    transition: transform 0.6s;
    transform-style: preserve-3d;
}

/* Add visual indicator for card interaction */
.feature-card::before {
    content: 'Tap to flip ↻';
    position: absolute;
    bottom: 10px;
    right: 10px;
    background: rgba(0, 0, 0, 0.6);
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.8rem;
    z-index: 1;
    opacity: 0;
    transition: opacity 0.3s ease;
}

/* Show flip indicator on hover/touch */
@@media (hover: hover) {
    .feature-card:hover::before {
        opacity: 1;
    }
}

/* For touch devices */
@@media (hover: none) {
    .feature-card::before {
        opacity: 1;
    }
}

/* Improve card faces */
.card-front, .card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.card-front {
    background: linear-gradient(145deg, #007bff, #0056b3);
}

.card-back {
    background: white;
    transform: rotateY(180deg);
}

/* Add active state for flipped cards */
.feature-card.flipped {
    transform: rotateY(180deg);
}

/* Add touch feedback */
@@media (max-width: 768px) {
    .feature-card:active {
        transform: scale(0.98);
    }
    
    .feature-card.flipped:active {
        transform: rotateY(180deg) scale(0.98);
    }
}

/* Ensure cards have minimum height on mobile */
@@media (max-width: 768px) {
    .feature-card {
        min-height: 250px;
        margin-bottom: 20px;
