<script>
    document.addEventListener('DOMContentLoaded', function () {
        // PEMF Explanation Toggle
        const explanationTrigger = document.querySelector('.pemf-explanation-trigger');
        const explanationBubble = document.querySelector('.pemf-explanation-bubble');

        explanationTrigger.addEventListener('click', function () {
            explanationBubble.classList.toggle('active');
            this.classList.toggle('active');
        });

        // Feature Cards Flip
        const featureCards = document.querySelectorAll('.feature-card');

        featureCards.forEach(card => {
            card.addEventListener('click', function () {
                this.classList.toggle('flipped');
            });

            // Add double-tap protection for mobile
            let lastTap = 0;
            card.addEventListener('touchend', function (e) {
                const currentTime = new Date().getTime();
                const tapLength = currentTime - lastTap;

                if (tapLength < 500 && tapLength > 0) {
                    e.preventDefault();
                    return;
                }

                lastTap = currentTime;
            });
        });
    });
</script>