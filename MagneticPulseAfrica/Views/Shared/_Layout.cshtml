    <style>
        /* Reset and Base Styles */
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            scroll-behavior: smooth;
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
        }

        /* Navigation Styles */
        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            background-color: rgba(255,255,255,0.95);
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            padding: 10px 0;
            transition: all 0.3s ease;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            font-weight: 700;
            color: #007bff;
            font-size: 1.4rem;
            transition: transform 0.3s ease;
        }

            .navbar-brand:hover {
                transform: scale(1.05);
            }

            .navbar-brand img {
                margin-right: 15px;
                height: 40px;
                width: 40px;
                border-radius: 6%;
                object-fit: cover;
            }

        .nav-link {
            color: #333;
            font-weight: 500;
            position: relative;
            margin: 0 10px;
            transition: all 0.3s ease;
        }

            .nav-link::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                bottom: -5px;
                left: 50%;
                background-color: #007bff;
                transition: all 0.3s ease;
            }

            .nav-link:hover::after, .nav-link.active::after {
                width: 100%;
                left: 0;
            }

            .nav-link:hover, .nav-link.active {
                color: #007bff !important;
            }

        .navbar-toggler {
            border: none;
            outline: none;
            box-shadow: none;
        }

            .navbar-toggler:focus {
                box-shadow: none;
            }

        /* Main Content Wrapper */
        #main-content {
            padding-top: 70px; /* Adjust for fixed navbar */
            min-height: 100vh;
            overflow-y: auto;
        }

        /* Section Styling */
        .section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 80px 15px;
            background-color: #fff;
        }

        /* Hero Section */
        .hero {
            background: linear-gradient(135deg, #007bff, #00bfff);
            color: white;
            text-align: center;
            padding: 150px 15px;
        }

        .hero-text {
            max-width: 700px;
            margin: 0 auto;
        }

        .hero h1 {
            font-size: 3rem;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .hero p {
            font-size: 1.5rem;
            margin-bottom: 30px;
        }

        /* Feature Cards */
        .feature-cards {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .feature-card {
            width: 250px;
            height: 350px;
            perspective: 1000px;
            position: relative;
            cursor: pointer;
        }

        .feature-card .card-front,
        .feature-card .card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            padding: 20px;
            text-align: center;
            transition: transform 0.6s;
        }

        .feature-card .card-front {
            background-color: #f8f9fa;
            z-index: 2;
        }

        .feature-card .card-back {
            background-color: #007bff;
            color: white;
            transform: rotateY(180deg);
        }

        .feature-card:hover .card-front {
            transform: rotateY(180deg);
        }

        .feature-card:hover .card-back {
            transform: rotateY(0deg);
        }
        .dropdown-menu {
    min-width: 300px;
    padding: 1rem;
    border: none;
    border-radius: 10px;
    margin-top: 10px;
}

.dropdown-menu form {
    margin: 0;
}


        /* Footer */
        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            text-align: center;
        }

        @@media (max-width: 991px) {
            .navbar-brand {
                font-size: 0; /* Hide the text */
            }

                .navbar-brand img {
                    margin-right: 0; /* Remove right margin since there's no text */
                    height: 70px; /* Even bigger on mobile */
                    width: 70px; /* Even bigger on mobile */
                }
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" href="/#home">
                    <img src="/images/logo.png" alt="Magnetic Pulse Africa Logo" onerror="this.style.display='none'">
                    Magnetic Pulse Africa
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/#home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Services#services">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/About#about">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Contact#contact">Contact</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-cog"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="adminDropdown">
                                <form class="px-4 py-3" action="/Admin/Login" method="post" id="adminLoginForm">
                                    @Html.AntiForgeryToken()
                                    <div class="mb-3">
                                        <label for="adminUsername" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="adminUsername" name="Username" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="adminPassword" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="adminPassword" name="Password" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100">Login</button>
                                    <div id="loginError" class="alert alert-danger mt-3" style="display: none;"></div>
                                </form>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div id="main-content" class="scroll-container">
        @RenderBody()
    </div>

    <footer>
        <p>© 2024 Magnetic Pulse Africa. All Rights Reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const mainContent = document.getElementById('main-content');
            const navLinks = document.querySelectorAll('.nav-link');

            // Remove previous wheel and keydown event listeners
            mainContent.removeEventListener('wheel', wheelHandler);
            document.removeEventListener('keydown', keydownHandler);

            // Update navigation links to use normal href behavior
            navLinks.forEach(link => {
                link.addEventListener('click', function (e) {
                    // Get the target section's ID from the href
                    const targetId = this.getAttribute('href').substring(1);
                    const targetSection = document.getElementById(targetId);

                    if (targetSection) {
                        // Smooth scroll to the section
                        targetSection.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                });
            });

            // Optional: Add back-to-top functionality
            const backToTopButton = document.createElement('button');
            backToTopButton.innerHTML = '↑';
            backToTopButton.classList.add('back-to-top');
            backToTopButton.style.cssText = `
                position: fixed;
                bottom: 20px;
                right: 20px;
                background-color: #007bff;
                color: white;
                border: none;
                border-radius: 50%;
                width: 50px;
                height: 50px;
                font-size: 24px;
                cursor: pointer;
                display: none;
                z-index: 1000;
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            `;

            backToTopButton.addEventListener('click', () => {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });

            document.body.appendChild(backToTopButton);

            // Show/hide back-to-top button based on scroll position
            window.addEventListener('scroll', () => {
                if (window.pageYOffset > 300) {
                    backToTopButton.style.display = 'block';
                } else {
                    backToTopButton.style.display = 'none';
                }
            });
        });
        // Admin login form handling
        document.getElementById('adminLoginForm')?.addEventListener('submit', async (e) => {
            e.preventDefault();
            const errorDiv = document.getElementById('loginError');
            errorDiv.style.display = 'none';

            try {
                const form = e.target;
                const formData = new FormData(form);
                const response = await fetch(form.action, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'RequestVerificationToken': form.querySelector('[name="__RequestVerificationToken"]').value
                    }
                });

                const result = await response.json();

                if (result.success) {
                    window.location.href = '/Admin/Index';
                } else {
                    errorDiv.textContent = result.message || 'Invalid credentials';
                    errorDiv.style.display = 'block';
                }
            } catch (error) {
                console.error('Login error:', error);
                errorDiv.textContent = 'An error occurred during login';
                errorDiv.style.display = 'block';
            }
        });
        // Close dropdown when clicking outside
        document.addEventListener('click', (e) => {
            if (!e.target.closest('.nav-item.dropdown')) {
                const dropdown = document.querySelector('.dropdown-menu');
                if (dropdown?.classList.contains('show')) {
                    dropdown.classList.remove('show');
                }
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>